package  {		import flash.display.Sprite;	import flash.display.Shape;	/*import fl.transitions.Tween;	import fl.transitions.easing.*;	import fl.transitions.TweenEvent; */	import com.greensock.*;	import com.greensock.easing.*;	import com.greensock.plugins.*;	import woollyyyy.utils.*;	import flash.display.MovieClip;				internal final class NodeDisc extends Sprite {				internal var ellWidth:Number;		internal var ellHeight:Number;		internal var discShape:Sprite;		internal var flowersArray:Array;				public function NodeDisc(startX:Number, startY:Number) {						ellWidth = ellHeight = Math.ceil(randomRange(5,100)*(startX-400/1600));							// how far along the Twig are we?  TODO we'll specify the size based on how far down twig			// var twigNodePosition = 						// draw an ellipse in a new Shape			var discShape= new Sprite();			with (discShape.graphics) {				lineStyle(Math.random()*1, 0x666666, 0.7);				beginFill(Math.random()-0.5*0xff3333, Math.random());				ellWidth = ellHeight = Math.ceil(randomRange(5,100)*(startX/1024));				//ellHeight = randomRange(5,8);				drawEllipse(startX-ellWidth/2, startY-ellWidth/2, ellWidth, ellHeight);				endFill();			}						//discShape.scaleX = discShape.scaleY = 0.01;						TweenPlugin.activate([TintPlugin]);			addChild(discShape);									for (var i=1;i<=randomRange(1,4); i++) {				var flower = new NodeFlower();				flower.x = startX;				flower.y = startY;				flower.rotation = randomRange(-150, 150);				flower.height = ellHeight;				flower.width = ellWidth;				//flowersArray.push(flower);				addChild(flower);			}									//_growDisc(discShape);			_fadeDisc(discShape);		}				private function _growDisc(obj:Sprite):void {			// attach a Tween instance to the circle and tween up the scale			trace('my shape is '+ obj.width + 'px wide and '+ obj.height + 'px high');			TweenLite.to(obj, 6, {scaleX:1, scaleY:1, ease:Elastic.easeOut});		}						private function _fadeDisc(obj:Sprite):void {			//Tween the color toward brown/gray as the Disc ages			TweenLite.to(obj, 60, {tint:0xaaaaaa, onComplete:_floatDiscOffScreen});		}				private function _floatDiscOffScreen():void {			var offStageY:int = 1*(Forest.instance.stage.stageHeight + 400);			TweenLite.to(this, 20*Math.random(), {y:offStageY, onComplete:Node(parent).removeNodeDisc});		}			}	}