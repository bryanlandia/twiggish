package {		import flash.display.Sprite		internal final class Node extends Sprite {				public var nodeDisc:NodeDisc;		public var nodeBranchesArray:Array;		public var section:TwigSection;		public var disc:NodeDisc;		private var _xPos:Number;		private var _yPos:Number;				public function Node(startX:Number, startY:Number) {			_xPos = startX;			_yPos = startY;			section = _drawSection();			disc = _drawNodeDisc();						// TODO: causing crazy recursion right now			/*if (Math.random() < Forest.BRANCHING_LIKELIHOOD) {				// add a new Branch off this Node				var branchOff = new Branch(_xPos, _yPos);				nodeBranchesArray.push(branchOff);				addChild(branchOff);			}*/					}				private function _drawSection(): TwigSection {			// draw a NodeSection			var _section = new TwigSection(_xPos, _yPos);			addChild(_section);			return _section		}				private function _drawNodeDisc(): NodeDisc {			// make a NodeDisc at the Node			var _disc = new NodeDisc(_xPos, _yPos);			addChild(_disc);			return _disc;		}								public function removeNodeDisc():void {			removeChild(disc);			disc = null;			dispatchEvent(new TwiggishEvent(TwiggishEvent.NODE_DISC_REMOVED));					}			}}