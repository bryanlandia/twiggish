package  {		import flash.display.Sprite;	import woollyyyy.utils.*;	import flash.events.Event;		internal final class TwigSection extends Sprite {				public var startX:Number;		public var startY:Number;		public var endX:Number;		public var endY:Number;				public function TwigSection(startX:Number, startY:Number) {			//trace('making a new TwigSection');			this.startX = startX;			this.startY = startY;			_init();		}				private function _init(e:Event = null):void {						// draw a line			with (this.graphics) {				lineStyle(3*Math.random(), 0x333333); // TODO change color?				moveTo(this.startX, this.startY);				endX = randomRange(-10, 70) + this.startX;				endY = randomRange(-10, 70) + this.startY;				var curveControlX:int = randomRange(-15, 15) + (startX + endX)/2;				var curveControlY:int = randomRange(-15, 15) + (startY + endY)/2;				curveTo(curveControlX, curveControlY, endX, endY);			} // from 0, 50 curveTo (76, 150, 71, 164)		}			}	}